{
    "settings": {
        "analysis": {
            "analyzer": {
                "ngram_analyzer": {
                    "tokenizer": "my_ngram_tokenizer",
                    "char_filter": [
                        "html_strip",
                        "nfkc_normalizer"
                    ]
                }
            },
            "tokenizer": {
                "my_ngram_tokenizer": {
                    "type": "ngram",
                    "min_gram": 1,
                    "max_gram": 2,
                    "token_chars": [
                        "letter",
                        "digit"
                    ]
                }
            },
            "char_filter": {
                "nfkc_normalizer": {
                    "type": "icu_normalizer"
                }
            }
        }
    },
    "mappings": {
            "properties": {
                 "graphictagmetrics":{
                     "type" : "nested",
                     "include_in_parent": true,
                     "properties": {
                          "tagname":{
                               "type":"keyword"
                          },
                          "count":{
                               "type":"integer"
                          }
                      }
                },
                "title": {
                    "type": "text",
                    "analyzer": "ngram_analyzer"
                },
                "volume": {
                    "type": "text",
                    "analyzer": "ngram_analyzer"
                },
                "responsibility": {
                    "type": "text",
                    "analyzer": "ngram_analyzer"
                },
                "publisher": {
                    "type": "keyword"
                },
                "published": {
                    "type": "keyword"
                },
                "bibId": {
                    "type": "keyword"
                },
			"contrastParam": {
                    "type": "keyword"
                },
                "callNo": {
                    "type": "keyword"
                },
                "autoTOCflag": {
                    "type": "boolean"
                },
                "index": {
                    "type": "text",
                    "analyzer": "ngram_analyzer"
                },
                "autoTOCindex": {
                    "type": "text",
                    "analyzer": "ngram_analyzer"
                },
                "contents": {
                    "type": "text",
                    "analyzer": "ngram_analyzer"
                }
            }
    }
}